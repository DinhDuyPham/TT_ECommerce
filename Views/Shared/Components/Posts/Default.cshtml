@model IEnumerable<TT_ECommerce.Models.EF.TbPost>
<!-- Start Blog Section -->
<div class="blog-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-6">
                <h2 class="section-title">Recent Blog</h2>
            </div>
            <div class="col-md-6 text-start text-md-end">
                <a href="#" class="more">View All Posts</a>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 mb-5">
                    <div class="post-entry">
                        <a href="@Url.Action("Detail" , "Posts", new { id = item.Id })" class="post-thumbnail">
                            <img src="@item.Image" alt="Image" class="img-fluid" />
                        </a>
                        <div class="post-content-entry">
                            <h3><a href="@Url.Action("Detail" , "Posts", new { id = item.Id })">First Time Home Owner Ideas</a></h3>
                            <div class="meta">
                                <span>by <a href="#">@item.CreatedBy</a></span>
                                <span>on <a href="#">@item.CreatedDate</a></span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- End Blog Section -->