@model TT_ECommerce.Models.EF.TbProduct
@{
    ViewData["Title"] = "Index";
}
  <!-- Start Hero Section -->
  <div class="hero">
    <div class="container">
      <div class="row justify-content-between">
        <div class="col-lg-5">
          <div class="intro-excerpt">
            <h1>Product Detail</h1>
          </div>
        </div>
        <div class="col-lg-7">
        </div>
      </div>
    </div>
  </div>
  <!-- End Hero Section -->

  <div class="untree_co-section product-section before-footer-section">
    <div class="container">
      <div class="row product-detail-container">
        <!-- Product Image -->
        <div class="col-md-6">
          <img src="images/product-3.png" class="img-fluid product-image" alt="Product Image">
        </div>

        <!-- Product Info -->
        <div class="col-md-6 product-info">
          <h3 class="product-title mb-3">@Model.Title</h3>
          <p><strong>Manufacturer:</strong>@Model.ProductCategory</p>
          <strong class="product-price">@Model.Price</strong>

          <div class="product-description my-4">
            <h5>Description:</h5>
            <p>@Model.Description</p>
          </div>
          
          <div class="quantity-selector my-4">
            <button class="btn btn-outline-secondary">-</button>
            <input type="number" id="quantity" name="quantity" min="1" value="1" class="form-control">
            <button class="btn btn-outline-secondary">+</button>
          </div>
          
          <button class="btn btn-primary d-flex align-items-center">
            Add to Cart
          </button>
        </div>
      </div>
    </div>
  </div>


