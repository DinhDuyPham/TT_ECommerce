@model TT_ECommerce.Models.EF.TbNews

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>TbNews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Tiêu đề</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="comment">Mô tả </label>
                <textarea class="form-control" id="comment" rows="5">
                          </textarea>
            </div>
      
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Danh mục bài viết</label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SeoTitle" class="control-label">Ngày tạo</label>
                <input asp-for="SeoTitle" class="form-control" />
                <span asp-validation-for="SeoTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeoTitle" class="control-label">Tác giả</label>
                <input asp-for="SeoTitle" class="form-control" />
                <span asp-validation-for="SeoTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="card-action">
                    <button class="btn btn-success">Submit</button>
                    <button class="btn btn-danger">Cancel</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-7 offset-md-1">
        <div class="form-group">
            <label asp-for="Price" class="control-label">Ảnh bài viết</label>
            <div class="form-group">
                <label for="exampleFormControlFile1">Chọn ảnh</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile1" accept="image/*" onchange="previewImage(event)" />

                <!-- Thẻ img để hiển thị hình ảnh đã chọn -->
                <img id="preview" src="#" alt="Preview Image" style="display:none; max-width: 50%; height: 200px; margin-top: 10px;" />
            </div>
        </div>
        <div class="form-group">
            <label for="tiny">Nội dung bài viết</label>
            <textarea class="form-control" id="tiny" rows="5"></textarea>
        </div>

    </div>
</div>


