        <script>
            function previewImage(event) { // Đảm bảo sử dụng 'event' ở đây
                var reader = new FileReader();
                reader.onload = function () {
                    var output = document.getElementById('preview');
                    output.src = reader.result;
                    output.style.display = 'block'; // Hiển thị hình ảnh sau khi đã chọn
                };

                // Kiểm tra xem file có được chọn không
                if (event.target.files && event.target.files[0]) {
                    reader.readAsDataURL(event.target.files[0]); // Đọc file ảnh được chọn
                }
            }
        </script>
